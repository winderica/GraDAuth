{
  "compilerOptions": {
    "target": "esnext",
    "lib": [
      "esnext"
    ],
    "typeRoots": [
      "typings",
      "node_modules/@types"
    ],
    "pretty": true,
    "module": "CommonJS",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "strict": true,
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedParameters": true
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}
