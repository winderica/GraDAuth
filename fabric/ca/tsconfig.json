{
  "compilerOptions": {
    "target": "esnext",
    "lib": [
      "esnext"
    ],
    "outDir": "dist",
    "pretty": true,
    "module": "CommonJS",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "strict": true,
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedParameters": true
  },
  "include": [
    "src",
    "types"
  ]
}
